<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/colorBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acarracer"
            android:gravity="center"
            android:text="실시간 CCTV 확인"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <!-- Notice -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insideCctv_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/alarm_on_mode"
            android:fontFamily="@font/custom_font_family"
            android:text="실내 모드"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/outsideCctv_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/turn_off_btn"
            android:fontFamily="@font/custom_font_family"
            android:text="실외 모드"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>
